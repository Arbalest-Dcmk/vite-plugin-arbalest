{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist", 
    "esModuleInterop": true, 
    "strict": true, 
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}